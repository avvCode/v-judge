<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vv.oj.mapper.QuestionFavourMapper">

    <resultMap id="BaseResultMap" type="com.vv.oj.model.entity.QuestionFavour">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="questionId" column="questionId" jdbcType="BIGINT"/>
            <result property="userId" column="userId" jdbcType="BIGINT"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,questionId,userId,
        createTime,updateTime
    </sql>

    <select id="listFavourQuestionByPage"
            resultType="com.vv.oj.model.entity.Question">
        select p.*
        from question p
                 join (select questionId from question_favour where userId = #{favourUserId}) pf
                      on p.id = pf.questionId ${ew.customSqlSegment}
    </select>
</mapper>
